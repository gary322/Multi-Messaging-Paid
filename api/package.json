{
  "name": "@mmp/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\" && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "MMP_RESET_STORE=1 NODE_ENV=test jest",
    "security-hardening": "MMP_RESET_STORE=1 NODE_ENV=test jest --runInBand security-hardening.spec.ts chaos-reliability.spec.ts",
    "performance-harness": "ts-node scripts/performance-harness.ts --requests 300 --concurrency 20 --message-bytes 80 --target-p95-ms 1250",
    "hardening": "pnpm run security-hardening && pnpm run performance-harness",
    "migrate:postgres": "ts-node scripts/migrate.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@simplewebauthn/server": "^10.0.1",
    "better-sqlite3": "^11.8.0",
    "cbor": "^10.0.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.1",
    "fastify": "^4.28.1",
    "ioredis": "^5.9.3",
    "nanoid": "^5.0.7",
    "pg": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
